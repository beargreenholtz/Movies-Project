{
	"name": "backend",
	"version": "1.0.0",
	"description": "Movie-Project backend files",
	"main": "index.js",
	"private": true,
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"husky:install": "husky install",
		"git:config": "git config --local include.path ../.gitconfig",
		"prepare": "run-p husky:install git:config",
		"depcheck:root": "depcheck --config ./.depcheckrc.json",
		"depcheck:nested": "pnpm -r depcheck",
		"depcheck:all": "run-p depcheck:root depcheck:nested",
		"prettier": "prettier --check **/*.{ts.js,cjs,json,yaml}",
		"type-check": "tsc --project ./tsconfig.json",
		"lint:root": "eslint -c ./.eslintrc.cjs --ignore-pattern \"apps\" \"**/*.{ts,js,cjs}\" --resolve-plugins-relative-to .",
		"lint:nested": "pnpm -r lint",
		"lint:all": "run-p lint:root lint:nested"
	},
	"author": "Bear Greenholtz",
	"license": "UNLICENSED",
	"devDependencies": {
		"@commitlint/cli": "17.4.2",
		"@typescript-eslint/eslint-plugin": "5.48.1",
		"@typescript-eslint/parser": "5.48.1",
		"commitizen": "4.2.6",
		"cz-vinyl": "1.6.2",
		"depcheck": "1.4.3",
		"eslint": "^8.27.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-deprecation": "^1.3.3",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"husky": "8.0.3",
		"lint-staged": "13.1.0",
		"npm-run-all": "4.1.5",
		"prettier": "2.8.3",
		"typescript": "4.9.4"
	}
}
